{
  "name": "vscode-purebasic",
  "displayName": "PureBasic Language Support",
  "description": "PureBasic language support for Visual Studio Code",
  "version": "0.0.1",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Languages",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:purebasic"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "purebasic",
        "aliases": [
          "PureBasic",
          "purebasic"
        ],
        "extensions": [
          ".pb",
          ".pbi"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/purebasic.svg",
          "dark": "./icons/purebasic.svg"
        }
      },
      {
        "id": "purebasic-project",
        "aliases": [
          "PureBasic Project",
          "purebasic-project"
        ],
        "extensions": [
          ".pbp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/purebasic-project.svg",
          "dark": "./icons/purebasic-project.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "purebasic",
        "scopeName": "source.purebasic",
        "path": "./syntaxes/purebasic.tmLanguage.json"
      },
      {
        "language": "purebasic-project",
        "scopeName": "source.purebasic",
        "path": "./syntaxes/purebasic.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack:prod",
    "compile": "tsc -p ./",
    "watch": "tsc -w",
    "webpack": "webpack --mode development",
    "webpack:prod": "webpack --mode production --config webpack.config.js",
    "webpack:watch": "webpack --mode development --watch",
    "test": "npm run compile && node ./out/test/suite/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "sharp": "^0.34.3",
    "ts-loader": "^9.5.4",
    "typescript": "^4.4.0",
    "vscode-test": "^1.6.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "extensionPack": [],
  "extensionDependencies": []
}
